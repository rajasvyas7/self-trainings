<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img src="/images/logo.png" class="logo"/>
      <h3>Account Login</h3>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" required name="name" value="{{name}}"/>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" required name="email" value="{{email}}"/>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" required name="password" value="{{password}}"/>
        </div>
        <div class="form-group">
          <label for="confirmPassword">Confirm Password</label>
          <input type="password" class="form-control" required name="confirmPassword" value="{{confirmPassword}}" />
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
    </div>
  </div>
</div>